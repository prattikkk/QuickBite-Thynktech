  "panels": [
    {
      "title": "Orders Created (rate/min)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(orders_created_total[1m])",
          "legendFormat": "orders/min"
        }
      ]
    },
    {
      "title": "Order State Transitions (rate/min)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "rate(orders_transitions_total[1m])",
          "legendFormat": "transitions/min"
        }
      ]
    },
    {
      "title": "Payment Intent Success vs Failed",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(payments_success_total[5m])",
          "legendFormat": "success/5m"
        },
        {
          "expr": "rate(payments_failed_total[5m])",
          "legendFormat": "failed/5m"
        }
      ]
    },
    {
      "title": "Webhook Processing",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "rate(webhooks_processed_total[5m])",
          "legendFormat": "processed/5m"
        },
        {
          "expr": "rate(webhooks_failed_total[5m])",
          "legendFormat": "failed/5m"
        },
        {
          "expr": "webhooks_dlq_total",
          "legendFormat": "DLQ total"
        }
      ]
    },
    {
      "title": "HikariCP Connection Pool",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "hikaricp_connections_active",
          "legendFormat": "active"
        },
        {
          "expr": "hikaricp_connections_idle",
          "legendFormat": "idle"
        }
      ]
    },
    {
      "title": "Order Create Duration (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(orders_create_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        }
      ]
    }
  ],
